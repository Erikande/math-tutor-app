{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2020",
    "module": "commonjs",  // âœ… Updated for ts-node + Express
    "lib": ["es2018", "dom"],
    "useDefineForClassFields": false,
    "types": ["node"],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["cypress"],
  "references": [
    { "path": "./tsconfig.spec.json" },
    { "path": "./cypress/tsconfig.json" }
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
