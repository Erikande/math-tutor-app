{
  "name": "math-tutor-app",
  "version": "1.0.8",
  "type": "commonjs",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test --watch=false --browsers=ChromeHeadless",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "cy:verify": "cypress verify",
    "cy:info": "cypress info",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commit": "cz",
    "audit:lighthouse": "lighthouse http://localhost:4200 --output=json --output-path=./audit/lh-latest.json --quiet --no-enable-error-reporting",
    "audit:axe": "axe http://localhost:4200 --save ./audit/axe-latest.json",
    "audit:report": "ts-node scripts/generate-audit-summary.ts",
    "audit:all": "npm run audit:lighthouse && npm run audit:axe && npm run audit:report",
    "api:start": "ts-node server/server.ts",
    "cy:responsive": "cypress run --spec 'cypress/e2e/responsive-*.cy.ts'",
    "cy:responsive:open": "cypress open --e2e"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.8",
    "@angular/cdk": "^19.2.8",
    "@angular/common": "^19.2.8",
    "@angular/compiler": "^19.2.8",
    "@angular/core": "^19.2.8",
    "@angular/flex-layout": "^15.0.0-beta.42",
    "@angular/forms": "^19.2.8",
    "@angular/material": "^19.2.8",
    "@angular/platform-browser": "^19.2.8",
    "@angular/platform-browser-dynamic": "^19.2.8",
    "@angular/router": "^19.2.8",
    "express": "^5.1.0",
    "ngx-toastr": "^15.2.2",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.9",
    "@angular/cli": "^19.2.8",
    "@angular/compiler-cli": "^19.2.8",
    "@axe-core/cli": "^4.10.2",
    "@testing-library/cypress": "^10.0.3",
    "@types/express": "^5.0.3",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.20.55",
    "codelyzer": "^6.0.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cypress": "^14.3.2",
    "cz-conventional-changelog": "^3.3.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lighthouse": "^12.6.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tslint": "~6.1.0",
    "typescript": "~5.8.3"
  }
}
